
    {% extends 'back.html.twig' %}

{% block body %}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Livreur edit</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <div class="card-body">



        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">


                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0" style="height: 300px;">

    {{ form_start(edit_form, {'attr': {'id': 'form_validation'}}) }}
        {{ form_widget(edit_form.nom, {'attr': {'minlength': '3'}}) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('livreur_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>



    </div>
</div>



{% endblock %}

    {% block js %}
        <script src="{{ asset('') }}jquery.validate.min.js"></script>
        <script>
            jQuery.validator.addMethod("lettersonly", function(value, element) {
                return this.optional(element) || /^[a-z]+$/i.test(value);
            }, "Letters only ");
            $(document).ready(function () {
                $("#form_validation").validate();
            });

        </script>
    {% endblock %}
