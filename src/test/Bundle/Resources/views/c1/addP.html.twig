{% extends "addProduct.html.twig" %}

{% block body %}

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Add Product</h3>
        </div>
        {% for msg in app.flashes('success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>
        {% endfor %}
        <br><br><br>
        {% for flashMessage in app.session.flashbag.get('notice') %}

            <div class="alert alert-success">
                {{ flashMessage }}
            </div>

        {% endfor %}
        <!-- /.card-header -->
        <!-- form start -->
        {{ form_start(Form,{ 'attr': { 'novalidate':
            'novalidate' }}) }}

            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    {{ form_widget(Form.nom,{'attr':{'type':'text','class':'form-control'}}) }}
                    {{ form_errors(Form.nom) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Price</label>
                    {{ form_widget(Form.prix,{'attr':{'type':'text','class':'form-control'}}) }}
                    {{ form_errors(Form.prix) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Description</label>
                    {{ form_widget(Form.description,{'attr':{'type':'text','class':'form-control'}}) }}
                    {{ form_errors(Form.description) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Quantity</label>
                    {{ form_widget(Form.qte,{'attr':{'type':'number','class':'form-control'}}) }}
                    {{ form_errors(Form.qte) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Expiration date</label>
                    {{ form_widget(Form.dateExpiration,{'attr':{'type':'date','class':'form-control'}}) }}
                    {{ form_errors(Form.dateExpiration) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Category</label>
                    {{ form_widget(Form.Category,{'attr':{'type':'date','class':'form-control'}}) }}
                    {{ form_errors(Form.Category) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Image</label>
                    {{ form_widget(Form.image,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(Form.image) }}
                </div>



            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        {{ form_end(Form) }}
    </div>
    <!-- /.card -->

{% endblock %}
