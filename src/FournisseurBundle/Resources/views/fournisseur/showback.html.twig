{% extends "manProduct.html.twig" %}
{% block titre %}Manage Fournisseur{% endblock %}
{% block body %}

    <!-- /.card-header -->
    <div class="card-body table-responsive p-0" style="height: 300px;">
        <table class="table table-head-fixed text-nowrap">
            <thead>

            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Num√©ro tel</th>
                <th>disponible</th>
                <th>Depot</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
            {%  for car in fournisseurs %}
            </thead>
            <tbody id="myTable">
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.nom }}</td>
                <td>{{ car.prenom }}</td>
                <td>{{ car.numTel }}</td>
                <td>{{ car.disponible }}</td>
                {% if car.depot is not null %}
                    <td><span>{{ car.depot.entreprise }}</span></td>
                    {% else %}
                        <td><a href="{{ path('affectD',{'id': car.id}) }}">Affecter</a> </td>
                {% endif %}
                <td><a href="{{ path('deleteF',{'id': car.id }) }}" >Delete</a></td>
                <td><a href="{{ path('editF',{'id': car.id }) }}" >Edit</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    </div>
    <!-- /.card -->
    </div>
    </div>



    </div>
    </div>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
