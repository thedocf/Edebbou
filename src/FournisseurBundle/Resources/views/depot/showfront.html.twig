{% extends 'base.html.twig' %}
{% block body %}

    <div class="products-catagories-area clearfix">
        <div class="amado-pro-catagory clearfix">
            {% for d in depots %}
            <div class="single-products-catagory clearfix">
                <a href="#">
                    <img src="{{ asset('uploads/images/depots/') }}{{ d.image }}" alt="">
                    <!-- Hover Content -->
                    <div class="hover-content">
                        <div class="line"></div>
                        <p>{{ d.entreprise }}</p>
                        <h2>{{ d.description }}</h2>
                    </div>
                </a>
            </div>
                {% endfor %}
            </div>

    </div>

{% endblock %}